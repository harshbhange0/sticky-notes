generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  name  String?
  email String? @unique
  image String?
  notes Notes[]
}

model Notes {
  id         String   @id @default(cuid())
  title      String
  content    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  flag       flag
  User       User?    @relation(fields: [userId], references: [id])
  userId     String?
}

enum flag {
  Null
  Archived
  Public
  Trashed
}
